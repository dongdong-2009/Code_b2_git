
path-constant 	HERE		: . ;
constant		PREFIX		: $(HERE)/bin/$(IDENTIFIER) ;

project
	: build-dir build
	;

exe sqlgen
	: [ glob src/*.cpp ]
	: <warnings>off
	  <runtime-link>shared
	  <threading>multi
	  <optimization>speed
	;

install install-sqlgen
	: sqlgen
	: <location>$(PREFIX)
	;
